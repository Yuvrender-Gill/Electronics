
x = 0.4925612;
y = (2*x)/(1-(x*2));
% y = (1/(1-x)) - (1/(1+x));
yr = (2*round(x,3, 'significant'))/(1-(round(x,3, 'significant')*2));

xr = round(x,3, 'significant');

absx = xr - x; %ebsolute error vlaue of x
absy = yr - y; %absolute error value of y
relx = absx/x; %relative error value of x
rely = absy/y; %relative error value of y


cond = rely/relx;
